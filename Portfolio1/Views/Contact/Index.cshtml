@model Portfolio1.Models.SendMail
@{
    ViewBag.Title = "Kontakt";
}

<div class="container clients-area">
    <div class="col-md-6 col-md-offset-3">
            @Html.ValidationSummary()
        <div class="well well-lg">
            @using(Html.BeginForm("Index","Contact",FormMethod.Post))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Name">Imię</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "Name", @placeholder = "Podaj swoje imię" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Email">E-mail*</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "Email" , @placeholder = "Podaj swój adres e-mail" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Message">Wiadomość*</label>
                        <div class="col-md-9">
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @id = "Message", @placeholder = "Pisz śmiało :)", @rows = "5" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-right">
                            <input type="submit" value="Wyślij" class="btn btn-primary btn-lg" />
                        </div>
                    </div>
                </div>
            }
        </div>
        <p>* pole obowiązkowe</p>
    </div>
</div>
