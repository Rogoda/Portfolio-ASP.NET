@using Portfolio1.Models;
@model IEnumerable<ImageData>

< !--Start cssSlider.com-- >
<!-- Generated by cssSlider.com 1.9 -->
<link rel="stylesheet" href="slider/csss_engine1/style.css">
<!--[if IE]><link rel="stylesheet" href="slider/csss_engine1/ie.css"><![endif]-->
<!--[if lte IE 9]><script type="text/javascript" src="slider/csss_engine1/ie.js"></script><![endif]-->
<script type="text/javascript" src="slider/csss_engine1/gestures.js"></script>
<div class='csslider1 autoplay '>
    @foreach (var e in Model)
    {
        <input name="cs_anchor1" id='@string.Format("cs_slide1_{0}",e.Id)' type="radio" class='cs_anchor slide'>

    }

    <input name="cs_anchor1" id='cs_play1' type="radio" class='cs_anchor' checked>

    <ul>
        @foreach (var e in Model)
        {
            <li class='@string.Format("num{0} img slide",e.Id)'>
                <img src='@Url.Content(e.Path)' alt='@e.Description' title='@e.Title' />
            </li>
        }
    </ul>

    <div class='cs_description'>
        @foreach (var e in Model)
        {
            <label class='@string.Format("num{0}",e.Id)'>
                <span class="cs_title"><span class="cs_wrapper">@e.Title</span></span>
            </label>
        }
    </div>
    <div class='cs_arrowprev'>
        @foreach (var e in Model)
        {
            <label class='@string.Format("num{0}",e.Id)' for='@string.Format("cs_slide1_{0}",e.Id)'>
                <span><i></i><b></b></span>
                <img src='@Url.Content(e.Path)' alt='@e.Description' title='@e.Title' />
            </label>
        }
    </div>
    <div class='cs_arrownext'>
        @foreach (var e in Model)
        {
            <label class='@string.Format("num{0}",e.Id)' for='@string.Format("cs_slide1_{0}",e.Id)'>
                <span><i></i><b></b></span>
                <img src='@Url.Content(e.Path)' alt='@e.Description' title='@e.Title' />
            </label>
        }
    </div>
    <div class='cs_bullets'>
        @foreach (var e in Model)
        {
            <label class='@string.Format("num{0}",e.Id)' for='@string.Format("cs_slide1_{0}",e.Id)'>
                <span class='cs_point'></span><span class='cs_thumb'>
                </span>
            </label>
        }
    </div>
</div>
